{
  "kind": "collectionType",
  "collectionName": "product_contacts",
  "info": {
    "singularName": "product-contact",
    "pluralName": "product-contacts",
    "displayName": "Product Contact",
    "description": "Links users to products they are responsible for reporting on"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "userEmail": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_contacts"
    },
    "role": {
      "type": "enumeration",
      "enum": [
        "primary",
        "secondary",
        "observer"
      ],
      "default": "primary"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "notificationsEnabled": {
      "type": "boolean",
      "default": true
    },
    "assignedAt": {
      "type": "datetime",
      "default": "now()"
    },
    "assignedBy": {
      "type": "string",
      "maxLength": 255
    }
  }
}