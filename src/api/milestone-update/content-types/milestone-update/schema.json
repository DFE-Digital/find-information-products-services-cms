{
  "kind": "collectionType",
  "collectionName": "milestone_updates",
  "info": {
    "singularName": "milestone-update",
    "pluralName": "milestone-updates",
    "displayName": "Milestone Update",
    "description": "Updates and progress notes for milestones"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "milestone": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::milestone.milestone",
      "required": true
    },
    "updateText": {
      "type": "text",
      "required": true,
      "maxLength": 2000
    },
    "ragStatus": {
      "type": "enumeration",
      "enum": [
        "red",
        "amber",
        "green"
      ]
    },
    "risks": {
      "type": "text",
      "maxLength": 1000
    },
    "issues": {
      "type": "text",
      "maxLength": 1000
    },
    "updatedBy": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "updateDate": {
      "type": "datetime",
      "default": "now()"
    },
    "isInternal": {
      "type": "boolean",
      "default": false
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["files", "images", "videos"]
    }
  }
}
