{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cmdb_sys_id": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "short_description": {
      "type": "text",
      "required": false
    },
    "long_description": {
      "type": "text",
      "required": false
    },
    "product_url": {
      "type": "string"
    },
    "category_values": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category-value.category-value",
      "inversedBy": "products"
    },
    "cmdb_last_sync": {
      "type": "datetime"
    },
    "state": {
      "type": "enumeration",
      "default": "New",
      "enum": [
        "New",
        "Active",
        "Rejected",
        "Deleted"
      ]
    },
    "product_assurances": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-assurance.product-assurance",
      "mappedBy": "product"
    },
    "parent_category": {
      "type": "string"
    },
    "fips_id": {
      "type": "customField",
      "customField": "plugin::strapi-advanced-uuid.uuid",
      "options": {
        "uuid-format": "^[A-Z]{3}-\\d{3}$"
      }
    },
    "product_contacts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-contact.product-contact",
      "mappedBy": "product"
    }
  }
}
